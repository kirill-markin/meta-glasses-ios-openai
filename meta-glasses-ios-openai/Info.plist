<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App display name (used by Siri and on home screen) -->
	<key>CFBundleDisplayName</key>
	<string>Glasses</string>
	
	<!-- Bluetooth permission for glasses connection -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Bluetooth is required to connect to your Meta Glasses. Without Bluetooth access, this app cannot function.</string>
	
	<!-- Microphone permission for audio recording -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Microphone is required to talk to AI through this app. Without microphone access, this app cannot function.</string>
	
	<!-- Photo Library ADD-ONLY permission for saving photos and videos -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>This app needs permission to SAVE photos and videos captured from your glasses to your Photo Library. The app will NOT be able to see or access any of your existing photos or videos.</string>
	
	<!-- Location permission for context-aware AI responses -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Your location helps the AI provide relevant local information like weather, nearby places, and time zone context</string>
	
	<!-- Allow Meta AI (fb-viewapp) to call the app -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>fb-viewapp</string>
	</array>
	
	<!-- External Accessory protocol for Meta Wearables -->
	<key>UISupportedExternalAccessoryProtocols</key>
	<array>
		<string>com.meta.ar.wearable</string>
	</array>
	
	<!-- Background modes for Bluetooth, external accessories, and audio -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		<string>bluetooth-peripheral</string>
		<string>external-accessory</string>
	</array>
	
	<!-- Configure custom URL scheme for Meta AI callbacks -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>$(APP_LINK_URL_SCHEME)</string>
			</array>
		</dict>
	</array>
	
	<!-- Lock to portrait orientation only -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
	
	<!-- Wearables Device Access Toolkit configuration -->
	<key>MWDAT</key>
	<dict>
		<key>AppLinkURLScheme</key>
		<string>$(APP_LINK_URL_SCHEME)://</string>
		<key>MetaAppID</key>
		<string>$(META_APP_ID)</string>
		<key>Analytics</key>
		<dict>
			<key>OptOut</key>
			<true/>
		</dict>
	</dict>
</dict>
</plist>
